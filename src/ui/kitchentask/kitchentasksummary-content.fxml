   <top>
      <BorderPane nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </BorderPane.margin>
         <center>
            <FlowPane alignment="CENTER_LEFT" minHeight="50.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="titleLabel" alignment="CENTER" prefHeight="26.0" prefWidth="221.0"
                         text="Foglio riepilogativo:">
                     <font>
                        <Font size="21.0"/>
                     </font>
                  </Label>
                  <Label fx:id="dettaglioServizioLabel" text="Dettaglio servizio">
                     <padding>
                        <Insets left="20.0"/>
                     </padding>
                  </Label>
               </children>
            </FlowPane>
         </center>
      </BorderPane>
   </top>
   <bottom>
      <FlowPane alignment="CENTER" hgap="5.0" prefHeight="39.0" prefWidth="517.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#exitButtonPressed" text="Esci">
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </FlowPane>
   </bottom>
   <center>
      <GridPane fx:id="centralPane" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: #aaaaaa; -fx-border-width: 1;">
               <top>
                  <FlowPane BorderPane.alignment="CENTER_LEFT">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                     </BorderPane.margin>
                     <children>
                        <Label prefHeight="17.0" prefWidth="272.0" text="Compiti">
                           <font>
                              <Font size="15.0"/>
                           </font>
                        </Label>
                     </children>
                  </FlowPane>
               </top>
               <center>
                  <BorderPane BorderPane.alignment="CENTER">
                     <center>
                        <ListView fx:id="kitchenTaskList" prefHeight="200.0" prefWidth="200.0" />
                     </center>
                  </BorderPane>
               </center>
               <bottom>
                  <FlowPane alignment="CENTER" hgap="5.0" prefHeight="38.0" prefWidth="264.0" prefWrapLength="200.0"
                            vgap="5.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="addKitchenTask" mnemonicParsing="false" onAction="#addKitchenTaskPressed"
                                text="+"/>
                        <Button fx:id="deleteKitchenTaskButton" disable="true" mnemonicParsing="false"
                                onAction="#deleteKitchenTaskPressed" text="–"/>
                        <FlowPane alignment="CENTER" hgap="5.0" prefWidth="370.0" prefWrapLength="100.0" vgap="5.0">
                           <children>
                              <Label text="Ordina: "/>
                              <Button disable="true" layoutX="23.0" layoutY="10.0" mnemonicParsing="false"
                                      onAction="#ordinaDifficoltaPressed" text="Più difficile"/>
                              <Button layoutX="252.0" layoutY="16.0" mnemonicParsing="false"
                                      onAction="#ordinaTempiPressed" text="Più lungo"/>
                              <Button mnemonicParsing="false" onAction="#ordinaNonCompletatoDaPrepararePressed"
                                      text="Non completato"/>
                           </children>
                        </FlowPane>
                     </children>
                     <padding>
                        <Insets top="5.0"/>
                     </padding>
                  </FlowPane>
               </bottom>
               <GridPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </GridPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </BorderPane>
            <BorderPane fx:id="assignKitchenTaskPane" prefHeight="200.0" prefWidth="200.0"
                        style="-fx-border-color: #aaaaaa; -fx-border-width: 1;" visible="false"
                        GridPane.columnIndex="1">
               <top>
                  <FlowPane BorderPane.alignment="CENTER_LEFT">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                     </BorderPane.margin>
                     <children>
                        <Label fx:id="itemsTitle" prefHeight="17.0" text="Dettaglio compito:">
                           <font>
                              <Font size="15.0"/>
                           </font>
                        </Label>
                        <Label fx:id="dettaglioCompitoLabel" text="Dettaglio compito">
                           <padding>
                              <Insets left="10.0"/>
                           </padding>
                        </Label>
                     </children>
                  </FlowPane>
               </top>
               <bottom>
                  <FlowPane alignment="CENTER" hgap="5.0" prefHeight="38.0" prefWidth="264.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="assegnaButton" mnemonicParsing="false" onAction="#assegnaButtonPressed"
