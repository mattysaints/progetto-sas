<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane prefHeight="457.0" prefWidth="748.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.kitchentask.KitchenTaskSummaryContent">
   <top>
      <BorderPane nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER_LEFT">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </BorderPane.margin>
         <center>
            <Label fx:id="titleLabel" alignment="TOP_LEFT" prefHeight="17.0" prefWidth="551.0"
                   text="Foglio riepilogativo" BorderPane.alignment="CENTER_LEFT">
               <font>
                  <Font size="21.0"/>
               </font>
            </Label>
         </center>
         <right>
            <FlowPane alignment="CENTER" hgap="5.0" prefHeight="60.0" prefWidth="236.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets/>
               </BorderPane.margin>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
               </padding>
            </FlowPane>
         </right>
      </BorderPane>
   </top>
   <bottom>
      <FlowPane alignment="CENTER" hgap="5.0" prefHeight="39.0" prefWidth="517.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#exitButtonPressed" text="Esci">
               <font>
                  <Font size="15.0"/>
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </BorderPane.margin>
      </FlowPane>
   </bottom>
   <center>
      <GridPane fx:id="centralPane" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
         </rowConstraints>
         <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: #aaaaaa; -fx-border-width: 1;">
               <top>
                  <Label prefHeight="17.0" prefWidth="272.0" text="Compiti" BorderPane.alignment="CENTER_LEFT">
                     <font>
                        <Font size="15.0"/>
                     </font>
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                     </BorderPane.margin>
                  </Label>
               </top>
               <center>
                  <BorderPane BorderPane.alignment="CENTER">
                     <center>
                        <ListView fx:id="sectionList" prefHeight="200.0" prefWidth="200.0"/>
                     </center>
                  </BorderPane>
               </center>
               <bottom>
                  <FlowPane alignment="CENTER" hgap="5.0" prefHeight="38.0" prefWidth="264.0" vgap="5.0"
                            BorderPane.alignment="CENTER">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addKitchenTaskPressed" text="+"/>
                        <Button fx:id="deleteSectionButton" disable="true" mnemonicParsing="false"
                                onAction="#deleteKitchenTaskPressed" text="–"/>
                        <Button fx:id="editSectionButton" disable="true" mnemonicParsing="false"
                                onAction="#editKitchenTaskPressed" text="Modifica"/>
                        <Button disable="true" layoutX="23.0" layoutY="10.0" mnemonicParsing="false"
                                onAction="#ordinaDifficoltaPressed" text="Ordina per difficoltà"/>
                        <Button disable="true" layoutX="252.0" layoutY="16.0" mnemonicParsing="false"
                                onAction="#ordinaTempiPressed" text="Ordina per tempi"/>
                     </children>
                     <padding>
                        <Insets top="5.0"/>
                     </padding>
                  </FlowPane>
               </bottom>
               <GridPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
               </GridPane.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
            </BorderPane>
            <BorderPane fx:id="itemsPane" prefHeight="200.0" prefWidth="200.0"
                        style="-fx-border-color: #aaaaaa; -fx-border-width: 1;" GridPane.columnIndex="1">
               <top>
                  <Label fx:id="itemsTitle" prefHeight="17.0" prefWidth="272.0" text="Dettaglio compito"
                         BorderPane.alignment="CENTER_LEFT">
                     <font>
                        <Font size="15.0"/>
                     </font>
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                     </BorderPane.margin>
                  </Label>
               </top>
               <center>
                  <ListView fx:id="itemsList" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
               </center>
               <bottom>
                  <FlowPane alignment="CENTER" hgap="5.0" prefHeight="38.0" prefWidth="264.0"
                            BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="modificaItemButton" disable="true" mnemonicParsing="false"
                                onAction="#modificaItemPressed" text="Modifica"/>
                     </children>
                     <BorderPane.margin>
                        <Insets/>
                     </BorderPane.margin>
                  </FlowPane>
               </bottom>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
               </padding>
               <GridPane.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
               </GridPane.margin>
            </BorderPane>
         </children>
      </GridPane>
   </center>
</BorderPane>
